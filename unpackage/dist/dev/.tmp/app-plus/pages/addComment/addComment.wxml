<view><block wx:for="{{list}}" wx:for-item="item" wx:for-index="i" wx:key="i"><view class="wrap"><view style="height:20rpx;"></view><view class="evaluate"><image class="evaluateImg" src="{{item.image}}"></image><text class="evaluateName">{{item.goods_name}}</text></view><view style="height:20rpx;"></view><view class="evaluateEvaluate"><block wx:for="{{item.evaluatetext}}" wx:for-item="items" wx:for-index="index" wx:key="index"><text class="{{['LaberList '+(items.yesId==1?'checkLaber':'')]}}" data-id="{{i}}" data-index="{{index}}" data-name="{{items.name}}" data-yes_id="{{items.yesId}}" data-event-opts="{{[['tap',[['changeBtn',[i,index,'$0','$1'],[[['list','',i],['evaluatetext','',index,'name']],[['list','',i],['evaluatetext','',index,'yesId']]]]]]]}}" bindtap="__e">{{items.name}}</text></block></view><view class="proposal"><textarea class="content" data-i="{{i}}" maxlength="-1" placeholder="宝贝满足你的期待吗？说说你的使用心得，分享给想买的他们吧" placeholder-style="color:#ccc" data-order_id="{{item.goods_id}}" data-event-opts="{{[['input',[['proposal',['$event']]]]]}}" value="{{item.content}}" bindinput="__e"></textarea></view><view><view class="addpicture"><view class="userinfocont"><block wx:if="{{item.videoUrl==''}}"><view class="videoinfo addvideo" data-i="{{i}}" data-event-opts="{{[['tap',[['upload_video',['$event']]]]]}}" bindtap="__e">添加视频</view></block><block wx:if="{{item.videoUrl}}"><view class="videowidth videoinfo addvideo"><video id="myVideo" src="{{item.videoUrl}}" enable-danmu danmu-btn controls></video><image class="dachas" src="/static/my/close.png" data-i="{{i}}" data-event-opts="{{[['tap',[['deleteVideo',['$event']]]]]}}" bindtap="__e"></image></view></block><block wx:for="{{item.images}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="imgwidth"><image class="uploadimg" style="width:100%;height:100%;" src="{{item}}" data-index="{{index}}" data-order_id="{{item.goods_id}}" data-i="{{i}}" data-event-opts="{{[['tap',[['listenerButtonPreviewImage',['$event']]]]]}}" bindtap="__e"></image><image class="dacha" src="/static/my/close.png" data-index="{{index}}" data-i="{{i}}" data-event-opts="{{[['tap',[['deleteImg',['$event']]]]]}}" bindtap="__e"></image></view></block><block wx:if="{{item.num<item.count}}"><view class="userinfo addimg" data-i="{{i}}" data-goods_id="{{item.goods_id}}" data-event-opts="{{[['tap',[['upload',['$event']]]]]}}" bindtap="__e">添加图片</view></block></view></view></view><view></view></view></block><view style="height:150rpx;"></view><view data-event-opts="{{[['tap',[['proposalClick',['$event']]]]]}}" class="button" bindtap="__e">提交评价</view></view>