/* pages/hncjiaoxue_intro/hncjiaoxue_intro.wxss */
page {
  background-color: #f5f5f5;
}
.banner {
  width: 100%;
  height: 420rpx;
}
.video {
  width: 100%;
  height: 420rpx;
}
.conttext {
  margin-bottom: 20rpx;
}
.jianjie {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #000;
  font-size: 30rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
}
.jianjiecont {
  width: 100%;
  padding: 35rpx 20rpx 0;
  background-color: #fff;
  font-size: 30rpx;
  color: #6e6e6e;
  line-height: 1.6;
}
.title {
  width: 100%;
  text-align: center;
}
.quanwen {
  color: #5a6795;
  font-size: 28rpx;
  margin-left: 10rpx;
  display: inline-block;
}
.picture {
  width: 100%;
  display: inline-block;
}
.pictureitem {
  float: left;
  width: 230rpx;
  height: 163rpx;
  margin: 0 10rpx 10rpx 0;
}
.pictureitem:nth-child(3),
.pictureitem:nth-child(6) {
  margin-right: 0;
}
.dakatext {
  /* width: 144rpx;
	height: 144rpx; */
  line-height: 130rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  display: inline-block;
  position: relative;
  /* top: -70%; */
  -webkit-animation-name: myFont;
          animation-name: myFont; /*动画的名字*/
  -webkit-animation-duration: 2000ms;
          animation-duration: 2000ms; /*定义动画完成一个周期所需要的时间，以秒或毫秒计*/
  -webkit-animation-iteration-count: infinite;
          animation-iteration-count: infinite; /*定义动画的播放次数，这里是无限播放*/
  -webkit-animation-direction: alternate;
          animation-direction: alternate;
}
.buy-tip {
  position: fixed;
  z-index: 8;
  left: 0;
  bottom: 80rpx;
  width: 340rpx;
  height: 90rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 0px 90rpx 90rpx 0px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  /* justify-content: space-evenly; */
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #323232;
  font-size: 32rpx;
  box-shadow: 0px 0px 8px 0px rgba(205, 205, 205, 0.8);
}
.buy-tip image {
  width: 60rpx;
  height: 60rpx;
  margin: 0 18rpx;
}
.goods-mask-box {
  background: rgba(0, 0, 0, 0.3);
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  right: 0;
  z-index: 9999999999;
}
.goodsMask {
  width: 100vw;
  height: 100vh;
}
.goodsbox {
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  width: 100vw;
  height: 800rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  padding: 20rpx;
}
.goods-close {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.goods-close cover-image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 22rpx;
}
.goods-main-title {
  text-align: center;
  font-size: 36rpx;
  color: #323232;
  padding-bottom: 20rpx;
}
.goods-list {
  overflow-y: scroll;
  height: 700rpx;
}
.noGoods {
  text-align: center;
  margin-top: 200rpx;
}
.goods-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 30rpx 0 28rpx 0;
  border-bottom: 1px solid #e7e7e7;
}
.goods-item-left {
  width: 200rpx;
  height: 200rpx;
}
.goods-title cover-image {
  width: 100%;
  height: 100%;
}
.goods-item-right {
  width: 490rpx;
  height: 200rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.goods-item-title {
  white-space: normal;
  height: 82rpx;
  overflow: hidden;
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods-bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 0 20rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 28rpx;
}
.goods-bottom-left {
  color: #e02020;
  width: 260rpx;
}
.goods-bottom-right {
  width: 188rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background: #fa6400;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 64rpx;
}

