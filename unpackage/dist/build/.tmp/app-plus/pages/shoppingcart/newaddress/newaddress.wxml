<view class="newaddress"><form><view class="form"><view class="name form_item"><label>姓名:</label><input class="input" data-value="name" data-event-opts="{{[['input',[['inputChange',['$event']]]]]}}" value="{{name}}" bindinput="__e"/></view><view class="phone form_item"><label>联系电话:</label><input class="input" data-value="tel" data-event-opts="{{[['input',[['inputChange',['$event']]]]]}}" value="{{tel}}" bindinput="__e"/></view><view class="area form_item"><icon class="righticon"></icon><view data-event-opts="{{[['tap',[['toggleTab',['$event']]]]]}}" bindtap="__e"><label>所在地区:</label><block wx:if="{{region!=''}}"><view class="picker">{{region[0]+"，"+region[1]+"，"+region[2]}}</view></block><w-picker class="vue-ref" vue-id="1" mode="region" data-ref="region" data-event-opts="{{[['^confirm',[['bindCityChange']]]]}}" bind:confirm="__e" bind:__l="__l"></w-picker></view></view><view class="detailaddress form_item"><label>详细地址:</label><input class="dizhiinput input" data-value="detailedAddress" placeholder="街道，楼号牌" data-event-opts="{{[['input',[['inputChange',['$event']]]]]}}" value="{{detailedAddress}}" bindinput="__e"/></view></view></form><view class="moren"><text class="morentext">设为默认</text><view class="rodio"><block wx:if="{{selected}}"><icon type="success" color="#48DB8D" size="20" data-index="{{index}}" data-event-opts="{{[['tap',[['selectList',['$event']]]]]}}" bindtap="__e"></icon></block><block wx:else><icon type="circle" size="20" data-index="{{index}}" data-event-opts="{{[['tap',[['selectList',['$event']]]]]}}" bindtap="__e"></icon></block></view></view><view class="saveaddress"><button data-event-opts="{{[['tap',[['save',['$event']]]]]}}" class="savebtn" bindtap="__e">保存地址</button></view></view>