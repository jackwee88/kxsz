/* pages/onlinestore/shaddress/shaddress.wxss */
page {
  background-color: #f5f5f5;
  box-sizing: border-box;
}
.shaddresslist {
  width: 100%;
  display: inline-block;
}
.shaddressitem {
  height: 260rpx;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.shaddressitem:last-child {
  margin-bottom: 0;
}
.left {
  width: 90%;
}
.infoname {
  margin-bottom: 20rpx;
}
.name {
  font-size: 32rpx;
  margin-right: 30rpx;
}
.phone {
  font-size: 30rpx;
}
.top {
  border-bottom: 1rpx solid #f5f2ed;
  position: relative;
}
.addresscont {
  font-size: 28rpx;
  height: auto;
  margin-bottom: 25rpx;
}
.rodio {
  display: inline-block;
  margin-right: 10rpx;
}
.rodio icon {
  position: relative;
  font-size: 16px;
}
.morentext {
  font-size: 24rpx;
  color: #8a857c;
}
.bottom {
  position: relative;
  height: 80rpx;
}
.bottomrght {
  position: absolute;
  right: 0;
  top: 18rpx;
}
.bottomrght_txt {
  float: left;
  color: #8a857c;
  font-size: 24rpx;
  line-height: 0;
}
.bottomrght_txt:first-child {
  margin-right: 30rpx;
}
.bianjiicon {
  width: 28rpx;
  height: 31rpx;
  background-size: 100% 100%;
  margin-right: 10rpx;
  position: relative;
  top: 1rpx;
}
.shanchuicon {
  width: 28rpx;
  height: 28rpx;
  background-size: 100% 100%;
  margin-right: 10rpx;
  position: relative;
  top: 5rpx;
}
.bianji {
  position: relative;
  top: -3rpx;
}
.addressbottom {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  border-radius: 0;
}
.addressbtn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #48db8d;
  color: #fff;
  border: none;
  font-size: 34rpx;
  text-align: center;
  outline: none;
  border-radius: 0;
}
.shiyong {
  width: 100rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  color: #8a857c;
  border-radius: 23rpx;
  border: 1rpx solid #8a857c;
  position: absolute;
  font-size: 24rpx;
  right: 0;
  top: 0;
}
.dagouicon {
  width: 39rpx;
  height: 34rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.greengou {
  width: 39rpx;
  height: 34rpx;
  background-size: 100% 100%;
}
.address-w text {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  margin: 20rpx 0;
}
.rodio-default {
  color: #48db8d;
  font-size: 24rpx;
}

