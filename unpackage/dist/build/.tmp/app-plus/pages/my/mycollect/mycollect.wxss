/* pages/my/mycollect/mycollect.wxss */
page {
  background-color: #f5f5f5;
  box-sizing: border-box;
}
.mycollect {
  padding: 30rpx 25rpx 0;
}
.search {
  height: 70rpx;
  background-color: #fff;
  border-radius: 5rpx;
  position: relative;
  padding-left: 30rpx;
  margin-bottom: 15rpx;
}
.searchicon {
  width: 25rpx;
  height: 25rpx;
  background-size: 100% 100%;
  position: relative;
  top: 12rpx;
  -webkit-box-pack: middle;
  -webkit-justify-content: middle;
          justify-content: middle;
}
.searchinput {
  height: 78rpx;
  line-height: 78rpx;
  font-size: 30rpx;
  position: absolute;
  top: 0;
  padding-left: 40rpx;
}
.place-hoder {
  color: #ccc;
  font-size: 28rpx;
  height: 78rpx;
  line-height: 78rpx;
  margin-top: -1rpx;
}
.navtab {
  height: 125rpx;
  line-height: 125rpx;
  background-color: #fff;
  border-radius: 5rpx;
  position: relative;
  font-size: 34rpx;
  color: #9d9d9d;
  margin-bottom: 15rpx;
}
.navtab_item {
  float: left;
  width: 33%;
  text-align: center;
}
.navtabimg {
  width: 43rpx;
  height: 37rpx;
  background-size: 100% 100%;
  margin-right: 20rpx;
  position: relative;
  top: 5rpx;
}
.tabcontitem {
  height: 250rpx;
  background-color: #fff;
  border-radius: 5rpx;
  padding: 30rpx;
  position: relative;
  margin-bottom: 15rpx;
}
.itemfolt {
  float: left;
}
.left {
  width: 188rpx;
  height: 188rpx;
  border: 1rpx solid #b2afaf;
  margin-right: 25rpx;
}
.leftimg {
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
}
.right {
  width: 65%;
  height: 188rpx;
  position: relative;
}
.title {
  color: #585757;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  width: 75%;
}
.xaingqing {
  font-size: 24rpx;
  color: #999999;
  display: -webkit-box;
  /*规定子元素的排列方向 */
  -webkit-box-orient: vertical;
  /*限制文本显示的行数  */
  -webkit-line-clamp: 1;
  /*实现多余的文字隐藏并用省略号来代表被隐藏的文字  */
  overflow: hidden;
  text-overflow: ellipsis;
}
.shoutingdate {
  font-size: 24rpx;
  color: #aaa5a5;
  position: absolute;
  bottom: 0rpx;
}
.goonlink {
  width: 140rpx;
  height: 44rpx;
  line-height: 44rpx;
  border: 1rpx solid #48db8d;
  font-size: 24rpx;
  color: #48db8d;
  text-align: center;
  position: absolute;
  right: -25rpx;
  top: 0;
  border-radius: 25rpx;
}
.nav-active {
  color: #008f00;
}
.productlist {
  width: 100%;
  display: inline-block;
}
.productitem {
  height: 230rpx;
  background-color: #fff;
  border-radius: 10px;
  padding: 20rpx;
  margin-bottom: 15rpx;
}
.leftitem {
  width: 188rpx;
  height: 188rpx;
  margin-right: 25rpx;
  float: left;
}
.leftitem_left {
  /* margin-right: 25rpx; */
}
.productimg {
  width: 256rpx;
  height: 185rpx;
  background-size: 100% 100%;
}
.leftitem_right {
  width: 60%;
}
.title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 14rpx;
}
.jieshao {
  height: 60rpx;
  line-height: 1.4;
  color: #999;
  font-size: 30rpx;
  /* margin-bottom: 20rpx; */
}
.seedetail {
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #48db8d;
  border: 1rpx solid #48db8d;
  font-size: 22rpx;
}
.popup {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 990;
}
.popupcont {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background-color: #000;
  opacity: 0.4;
}
.clear:after {
  content: "";
  display: block;
  height: 0;
  visibility: hidden;
  clear: both;
}
.collectimg_active {
  width: 28rpx;
  height: 26rpx;
  background-size: 100% 100%;
  margin-right: 15rpx;
}
.collect {
  position: relative;
  display: inline-block;
  width: 150rpx;
  margin-bottom: 35rpx;
}
.collecttext_active {
  color: #008800;
  font-size: 24rpx;
  position: relative;
}
.collect_ {
  position: relative;
  display: inline-block;
  width: 150rpx;
}
.jieshao {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

